<div class="container" style="margin: 100pz auto;">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar nuevo servicio</h4>
            <form action="/admin/administrador/agregar" method="post">
                <div class="mb-3 row">
                    <input type="text" class="form-control" placeholder="Título" name="titulo">
                </div>
                <div class="mb-3 row">
                    <textarea type="text" class="form-control" placeholder="Descripción" name="descripcion"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
            {{#if error}}
                <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>