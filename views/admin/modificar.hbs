<div class="container" style="margin: 100pz auto;">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar servicio</h4>
            <form action="/admin/administrador/modificar" method="post">
                <input type="hidden" value="{{servicio.id}}" name="id">
                <div class="form-group">
                    <label for="">Título</label>
                    <input type="text" class="form-control" name="titulo" value="{{servicio.titulo}}">
                </div>
                <div class="form-group">
                    <label for="">Descripción</label>
                    <textarea name="descripcion" class="form-control">{{servicio.descripcion}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
            {{#if error}}
                <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>